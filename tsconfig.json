{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceRoot": "src/",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./types"]
  }
}
